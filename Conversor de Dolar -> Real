function Converter() {
  var valorElemento = document.getElementById("valor");
  var valor = valorElemento.value;
  //tranformado em valor numerico "parseFloat e parseInt"
  var valorDolarNum = parseFloat(valor);
  
  //Calculo de transformação de dolar pra real
  var valorEmReal = valorDolarNum * 5;
  
  //Variavel usada para puxar id do html
  var elementoValorConvertido = document.getElementById("valorConvertido");
  var valorConvertido = "O resultado em real R$:" + valorEmReal;
  
  //Coloquei variavel para ingressar o valor no HTML com ".innerHTML"
  elementoValorConvertido.innerHTML = valorConvertido;
}
